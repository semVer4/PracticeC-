<Window x:Class="z2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:z2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="textBlock" TextWrapping="Wrap" Margin="242,28,262,231" FontWeight="Bold" TextAlignment="Center" FontSize="36"/>
        <Button Content="Закрыть" HorizontalAlignment="Left" Height="53" Margin="441,334,0,0" VerticalAlignment="Top" Width="158" Click="Button_Click"/>
        <TextBox x:Name="textBox" TextWrapping="Wrap" Text="Введите имя" Margin="254,215,272,141" RenderTransformOrigin="0.5,0.5" FontWeight="Bold" TextAlignment="Center">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Button Content="Сказать имя" Margin="125,336,451,48" Click="Button_Click_1"/>
        <Button Content="Справка" Margin="668,4,5,345" Click="Button_Click_2"/>

    </Grid>
</Window>
